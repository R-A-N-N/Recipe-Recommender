<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/recipe_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/side_nave"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@color/yellow"
            android:src="@drawable/ic_baseline_menu_24">

        </ImageButton>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20sp"
            app:cardElevation="20sp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white">

            <SearchView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:iconifiedByDefault="false">

            </SearchView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="ALL THE RECIPES : "
        android:textColor="@android:color/background_dark"
        android:textSize="20dp">

    </TextView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:textColor="@color/white"
                android:clickable="true"
                android:elevation="10sp"

                android:focusable="true"
                android:soundEffectsEnabled="true"
                android:text="Veg" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/white"
                android:soundEffectsEnabled="true"
                android:text="Non-veg"
                android:elevation="10sp"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:clickable="true"
                android:elevation="10sp"
                android:textColor="@color/white"
                android:focusable="true"
                android:soundEffectsEnabled="true"
                android:text="Cuisin" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:clickable="true"
                android:textColor="@color/white"
                android:focusable="true"
                android:soundEffectsEnabled="true"
                android:text="Time"
                android:elevation="10sp"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_corner"
                android:clickable="true"
                android:textColor="@color/white"
                android:focusable="true"
                android:soundEffectsEnabled="true"
                android:text="Breakfast"
                android:elevation="10sp"/>

        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="15dp"
                app:cardElevation="20sp">

                <ImageView
                    android:id="@+id/card1Img"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:contentDescription="Burger"
                    android:src="@drawable/burgerr" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="165dp"
                    android:gravity="center_horizontal"
                    android:text="Burger"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_gravity="end"
                android:layout_marginTop="-200dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20sp">

                <ImageView
                    android:id="@+id/card2Img"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_gravity="top"
                    android:layout_margin="20dp"
                    android:contentDescription="Pizza"
                    android:outlineSpotShadowColor="@color/colorAccent"
                    android:src="@drawable/pizzaa" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="170dp"
                    android:gravity="center_horizontal"
                    android:text="Cheese Pizza"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="15dp"
                app:cardElevation="20sp">

                <ImageView
                    android:id="@+id/card3Img"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:contentDescription="Fries"
                    android:outlineSpotShadowColor="@color/colorAccent"
                    android:src="@drawable/friess" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="163dp"
                    android:gravity="center_horizontal"
                    android:text="Fries"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center"
                    android:textSize="25sp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_gravity="end"
                android:layout_marginTop="-200dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20sp">

                <ImageView
                    android:id="@+id/card4Img"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:contentDescription="Quino Salad"
                    android:outlineSpotShadowColor="@color/colorAccent"
                    android:src="@drawable/quinoasalad" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="163dp"
                    android:gravity="center_horizontal"
                    android:text="Quino salad"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="15dp"
                app:cardCornerRadius="20dp"
                app:contentPaddingRight="20dp"
                app:cardElevation="20sp">

                <ImageView
                    android:id="@+id/card5Img"
                    android:layout_width="130dp"
                    android:layout_height="142dp"
                    android:layout_margin="20dp"
                    android:contentDescription="Fried Rice"
                    android:src="@drawable/friedrice" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="163dp"
                    android:gravity="center_horizontal"
                    android:text="Fried rice"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card6"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_gravity="end"
                android:layout_marginTop="-200dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20sp">

                <ImageView
                    android:id="@+id/card6Img"
                    android:layout_width="wrap_content"
                    android:layout_height="127dp"
                    android:layout_margin="20dp"
                    android:contentDescription="Crispy Zucchini Fritters"
                    android:textColor="@android:color/background_dark"
                    android:src="@drawable/crispyzucchinifritters" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="160dp"
                    android:gravity="center_horizontal"
                    android:text="Crispy Zucchini Fritters"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center"
                    android:textSize="17sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card7"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="20dp"
                android:layout_marginLeft="15dp"
                app:contentPaddingRight="20dp"
                app:cardElevation="20sp">

                <ImageView
                    android:id="@+id/card7Img"
                    android:layout_width="130dp"
                    android:layout_height="139dp"
                    android:layout_margin="20dp"
                    android:contentDescription="Sambar"
                    android:src="@drawable/sambar" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="165dp"
                    android:gravity="center_horizontal"
                    android:text="Sambar"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card8"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_gravity="end"
                android:layout_marginTop="-200dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="20sp">

                <ImageView
                    android:id="@+id/card8Img"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    android:contentDescription="Sushi"
                    android:outlineSpotShadowColor="@color/colorAccent"
                    android:src="@drawable/sushi" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="160dp"
                    android:gravity="center_horizontal"
                    android:text="Sushi"
                    android:textColor="@android:color/background_dark"
                    android:textAlignment="center"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>




        </LinearLayout>
    </ScrollView>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:theme="@style/NavigationDrawerStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/side_nav"
        app:menu="@menu/side_menu"
        android:background="@color/yellow"
        app:itemTextColor="@color/black">
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>